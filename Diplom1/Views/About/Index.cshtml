    <div class="container">
        <h2>Галлерея</h2>
        <div class="row">
            <div class="col-lg-4 view view-tenth">
                @Html.Image("/img/about-1.jpg", "5 постов для оказания услуг автосервиса")
            </div>
            <div class="col-lg-4 view view-tenth">
                @Html.Image("/img/about-2.jpg", "Стенд Развал-схождение 3D")
            </div>
