@using Diplom1.Models
@model Diplom1.Models.Worker

@{
    ViewBag.Title = "Подробности";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Surname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AccountID)
        </dt>

        <dd>
            @if (ViewBag.User != null)
            {
                @ViewBag.User.UserName
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Jobs)
        </dt>
        <dd>
            <ul>
                @foreach (var item in Model.Jobs)
                {
                    <li>
                        @Html.DisplayFor(modelItem => item.Name)
                    </li>
                }
            </ul>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Days)
        </dt>
        <dd>
            <ul>
                @foreach (var item in Model.Days)
                {
                    <li>
                        @Html.DisplayFor(modelItem => item.Name)
                    </li>
                }
            </ul>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Список сотрудников", "Index")
</p>
