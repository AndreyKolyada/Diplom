@model IEnumerable<Diplom1.Models.Order>

@{
    ViewBag.Title = "Cписок заказов";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}
<p>
    @Html.ActionLink("Новый заказ", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Person)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Car)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Job)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Worker)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("+375 " + @Html.DisplayFor(modelItem => item.Person.Phone).ToHtmlString(), "/Details/" + item.PersonId, "People")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Car)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Worker.Name)
                @Html.DisplayFor(modelItem => item.Worker.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.ActionLink("Редактрировать", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Подробности", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
